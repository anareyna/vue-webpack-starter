.main-header
    background-color #ececec
    padding 20px 20px 40px
    min-height 100px
    .h2
        font-weight normal
        margin-bottom 20px
        font-size 30px
        color #4C4D4E
    .el-button--default
        background-color #888
        color white
        border none
    .block
        display block
    .lnk-buy
        text-decoration none
        font-weight bold
.main-header__content
    display flex
    justify-content space-between
.main-header__left
    flex-shrink 0
    flex-grow 1

.main-header__right
    display flex
    flex-wrap wrap
    .main-header__printed
        text-align right
    .main-header__buy-package
        margin 0 25px
        .main-header__buy-package-link 
            color white
            text-decoration none
    .main-header__user
        text-align right
        min-width 280px
.toggle // delete
    position absolute
    top 100px

.fade-enter-active, .fade-leave-active
    transition opacity .5s

.fade-enter, .fade-leave-to
    opacity 0

.loading-background
    &__mask
        height 18px
        position absolute
        z-index 1
    .breadcrumb
        width 150px
        top 16px
    .title
        width 350px
        height 30px
        top 60px
        overflow hidden
    .printed
        top 20px
        right 500px
        width 150px
    .buy-printed
        top 40px
        right 500px
        width 130px
    .user
        top 20px
        right 20px
        width 200px
    .dates
        top 40px
        right 20px
        width 270px
    .btn
        top 20px
        right 310px
        width 170px
        height 30px

.el-breadcrumb
    display flex