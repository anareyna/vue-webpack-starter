.el-table
    border-left none
    border-right none
    font-size 16px
    thead .cell
        font-size 12px

    th > .cell
        text-transform uppercase
        letter-spacing 2px

.el-table__body-wrapper
    min-height 300px

.el-table__empty-text
    display none

.el-loading-mask
    top 40px

.el-table--border th, .el-table--border td
    border-right none
